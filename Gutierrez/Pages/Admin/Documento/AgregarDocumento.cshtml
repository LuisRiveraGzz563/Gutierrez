@page

@{
    Layout = "_LayoutAdmin";
}

<div class="content">
    <!-- Encabezado -->
    <div class="header">
        <h1>Agregar documento</h1>
        <div class="buttons">
            <button class="btn-add" onclick="Agregar()">Agregar</button>
            <button class="btn-cancel" onclick="Cancelar()">Cancelar</button>
        </div>
    </div>

    <!-- Formulario -->
    <form class="form">
        <!-- Usuario -->
        <div class="form-group">
            <label for="usuario">Nombre del documento:</label>
            <input type="text">
            <span class="required"></span>
        </div>
        <div class="form-group">
            <label for="usuario">Nomenclatura:</label>
            <textarea class="texttarea"></textarea>
            <span class="required"></span>
        </div>
        <div class="form-group">
            <label for="usuario">Solicitar a partir de:</label>
            <input type="text">
            <span class="required"></span>
        </div>
        <div class="form-group">
            <label for="usuario">Enviar cada:</label>
            <input type="text">
            <span class="required"></span>
        </div>
        <div class="form-group">
            <label for="registro-repse">Ejemplo de documento:</label>
            <div class="input-container-file">
                <input type="file" id="registro-repse" name="registro-repse">
                <i class="fas fa-folder-open icon-insert"></i>
            </div>
            <span class="required">*</span>
        </div>

    </form>
</div>

<script>
     // Function to go back (optional)
      function Agregar() {
        window.location.replace('DocumentosView')
      }
    // Function to go back (optional)
     function Cancelar() {
       window.location.replace('DocumentosView')
     }
</script>
