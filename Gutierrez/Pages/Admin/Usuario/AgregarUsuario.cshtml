@page

@{
    Layout = "_LayoutAdmin";
}

<div class="content">
    <!-- Encabezado -->
    <div class="header">
        <h1>Registro</h1>
        <div class="buttons">
            <button class="btn-add">Agregar</button>
            <button class="btn-cancel" onclick="regresar()">Cancelar</button>
        </div>
    </div>

    <!-- Formulario -->
    <form class="form">
        <!-- Usuario -->
        <div class="form-group">
            <label for="usuario">Usuario:</label>
            <input type="text" id="usuario" name="usuario">
            <span class="required">*</span>
        </div>

        <!-- Contraseña -->
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <div class="input-container">
                <input type="password" id="password" name="password" placeholder="Ingresa una contraseña">
                <i class="fas fa-eye toggle-password" data-target="password"></i>
            </div>
            <span class="required">*</span>
        </div>

        <!-- Confirmar Contraseña -->
        <div class="form-group">
            <label for="confirm-password">Confirmar Contraseña:</label>
            <div class="input-container">
                <input type="password" id="confirm-password" name="confirm-password" placeholder="Repite la contraseña">
                <i class="fas fa-eye toggle-password" data-target="confirm-password"></i>
            </div>
            <span class="required">*</span>
        </div>


        <!-- Registro REPSE -->
        <div class="form-group">
            <label for="registro-repse">No. de Registro REPSE:</label>
            <input type="text" id="registro-repse" name="registro-repse">
            <span class="required">*</span>
        </div>

        <!-- Aviso REPSE -->
        <div class="form-group">
            <label for="registro-repse">Aviso de registro REPSE:</label>
            <div class="input-container-file">
                <input type="file" id="registro-repse" name="registro-repse">
                <i class="fas fa-folder-open icon-insert"></i>
            </div>
            <span class="required">*</span>
        </div>


        <!-- Proveedor -->
        <div class="form-group">
            <label for="proveedor">Proveedor de Servicios Especializados:</label>
            <select id="proveedor" class="selectProveedor" name="proveedor">
                <option disabled selected>Selecciona un proveedor</option>
                <option>AdminTest</option>
                <option>Proveedor 2</option>
            </select>
            <span class="required">*</span>
        </div>

        <div class="form-group">
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email">
            <span class="required">*</span>
        </div>

        <div class="form-group">
            <label for="telefono">Teléfono:</label>
            <input type="tel" id="telefono" name="telefono">
            <span class="required">*</span>
        </div>

        <div class="form-group">
            <label for="contacto">Contacto:</label>
            <input type="text" id="contacto" name="contacto">
            <span class="required">*</span>
        </div>

        <div class="form-group">
            <label for="regimen">Tipo de Régimen:</label>
            <input type="text" id="contacto" name="contacto">
            <span class="required">*</span>
        </div>
    </form>
</div>
<script src="~/js/Admin/Usuarios/agregar.js"></script>

<script>
     function regresar() {
        window.location.replace('UsuariosView');
    }

    document.querySelectorAll('.toggle-password').forEach(icon => {
        icon.addEventListener('click', function () {
            const target = document.getElementById(this.dataset.target);
            if (target.type === 'password') {
                target.type = 'text';
                this.classList.remove('fa-eye');
                this.classList.add('fa-eye-slash');
            } else {
                target.type = 'password';
                this.classList.remove('fa-eye-slash');
                this.classList.add('fa-eye');
            }
        });
    });

</script>